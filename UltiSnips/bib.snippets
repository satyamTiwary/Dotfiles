snippet add-article "Add an article to bibliography library" -b
@article($1,
		author = {$2},
		title = {$3},
		year = {$4},
		publisher = {$5}
		)
endsnippet


snippet add-book "Add a book to bibliography library" -b
@book($1,
		author = {$2},
		title = {$3},
		year = {$4},
		journal = {$5},
		volume = {$6},
		pages = {$7}
		)
endsnippet


snippet add-website "Add a website to bibliography library" -b
@misc($1,
		author = {$2},
		title = {$3},
		url = {$4},
		)
endsnippet


